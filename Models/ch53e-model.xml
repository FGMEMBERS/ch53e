<?xml version="1.0"?>

<PropertyList>

<!--
This file includes debugging animations and "other" type stuff.
The meat is broken out into other files.
-->

<path>ch53e.ac</path>

<!-- external animations -->
<body-animation include="ch53e-body-anim.xml" omit-node="y"/>

<!-- animations of cockpit objects -->
<cockpit-animation include="ch53e-cockpit-anim.xml" omit-node="y"/>

<!-- placement of instrument models -->
<instruments include="ch53e-instruments.xml" omit-node="y"/>

<!-- pick animations and bindings -->
<controls include="ch53e-controls.xml" omit-node="y"/>

<!-- DEBUGGING AND DEVLEOPMENT SECTION -->

<animation>
   <name>Development Rotors</name>
	<type>noshadow</type>
	<object-name>FooRotor</object-name>
	<object-name>FooTailRotor</object-name>
</animation>

<animation>
	<type>material</type>
	<object-name>PanelHood</object-name>
	<property-base>sim/model/ch53e/test-mat</property-base>
	<ambient>
		<red-prop>ambient/red</red-prop>
		<green-prop>ambient/green</green-prop>
		<blue-prop>ambient/blue</blue-prop>
	</ambient>
	<diffuse>
		<red-prop>diffuse/red</red-prop>
		<green-prop>diffuse/green</green-prop>
		<blue-prop>diffuse/blue</blue-prop>
	</diffuse>
	<specular>
		<red-prop>specular/red</red-prop>
		<green-prop>specular/green</green-prop>
		<blue-prop>specular/blue</blue-prop>
	</specular>
	<emission>
		<red-prop>emission/red</red-prop>
		<green-prop>emission/green</green-prop>
		<blue-prop>emission/blue</blue-prop>
	</emission>
</animation>

</PropertyList>
