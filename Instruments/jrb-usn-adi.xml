<?xml version="1.0"?>
<PropertyList>

<path>jrb-usn-adi.ac</path>

<nasal>
	<jrb-usn-adi>
		<file>Aircraft/ch53e/Instruments/jrb-usn-adi.nas</file>
	</jrb-usn-adi>
</nasal>

<!-- FIXME -->
<!-- Since this does not exist yet ... -->
<instrumentation>
	<attitude-indicator>
		<roll-offset-deg type="double">0</roll-offset-deg>
	</attitude-indicator>
</instrumentation>

<animation>
	<type>alpha-test</type>
	<object-name>W</object-name>
	<object-name>RollIndicator</object-name>
</animation>

<animation>
	<type>range</type>
	<min-m>0</min-m>
	<max-m>5</max-m>
</animation>

<!-- Hotspots -->

<panel>
	<path>Aircraft/ch53e/Instruments/jrb-usn-adi-hotspots.xml</path>
	<bottom-right>
		<x-m>.015</x-m>
		<y-m>.068</y-m>
		<z-m>-.07</z-m>
	</bottom-right>
	<bottom-left>
		<x-m>.015</x-m>
		<y-m>-.068</y-m>
		<z-m>-.07</z-m>
	</bottom-left>
	<top-left>
		<x-m>.015</x-m>
		<y-m>-.068</y-m>
		<z-m>.07</z-m>
	</top-left>
</panel>

<animation>
	<type>rotate</type>
	<object-name>Offset</object-name>
	<property>instrumentation/attitude-indicator/roll-offset-deg</property>
	<center>
		<z-m>.003</z-m>
	</center>
	<axis>
		<x>-1</x>
	</axis>
</animation>

<animation>
	<name>Roll</name>
	<object-name>Ball</object-name>
	<object-name>RollIndicator</object-name>
</animation>

<animation>
	<type>rotate</type>
	<object-name>Roll</object-name>
	<property>instrumentation/attitude-indicator/indicated-roll-deg</property>
	<center>
		<z-m>.003</z-m>
	</center>
	<axis>
		<x>1</x>
	</axis>
</animation>

<animation>
	<type>texmultiple</type>
	<object-name>Ball</object-name>
	<transform>
		<subtype>textranslate</subtype>
		<property>instrumentation/attitude-indicator/indicated-pitch-deg</property>
		<factor>.0074</factor>
		<axis>
			<y>1</y>
		</axis>
	</transform>
	<transform>
		<subtype>textranslate</subtype>
		<property>instrumentation/attitude-indicator/horizon-offset-deg</property>
		<factor>.0074</factor>
		<axis>
			<y>1</y>
		</axis>
	</transform>
</animation>

<animation>
	<type>rotate</type>
	<object-name>RollKnob</object-name>
	<property>instrumentation/attitude-indicator/roll-offset-deg</property>
	<factor>-6</factor>
	<center>
		<y-m>-.05</y-m>
		<z-m>-.05</z-m>
	</center>
	<axis>
		<x>1</x>
	</axis>
</animation>

<animation>
	<type>rotate</type>
	<object-name>PitchKnob</object-name>
	<property>instrumentation/attitude-indicator/horizon-offset-deg</property>
	<factor>-6</factor>
	<center>
		<y-m>.05</y-m>
		<z-m>-.05</z-m>
	</center>
	<axis>
		<x>1</x>
	</axis>
</animation>

<animation>
	<type>rotate</type>
	<object-name>ATTFlag</object-name>
	<property>sim/model/jrb-usn-adi/ATTFlag-pos-norm</property>
	<offset-deg>-45</offset-deg>
	<factor>45</factor>
	<center>
		<y-m>-.059</y-m>
		<z-m>-.012</z-m>
	</center>
	<axis>
		<x>1</x>
	</axis>
</animation>

<animation>
	<type>translate</type>
	<object-name>TurnIndicator</object-name>
	<property>instrumentation/turn-indicator/indicated-turn-rate</property>
	<factor>.0052</factor>
	<axis>
		<y>1</y>
	</axis>
</animation>

</PropertyList>










