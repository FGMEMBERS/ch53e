            <egt-degf type='double'>70</egt-degf>
        </engine>
        <engine n='1'>
            <gear-oil-temp-degf type='double'>70</gear-oil-temp-degf>
            <egt-degf type='double'>70</egt-degf>
        </engine>
        <engine n='2'>
            <gear-oil-temp-degf type='double'>70</gear-oil-temp-degf>
            <egt-degf type='double'>70</egt-degf>
        </engine>
    </engines>
    <surface-positions>
