<?xml version="1.0"?>

<PropertyList>

<sim>
	<name>CH-53E</name>
	<description>Sikorsky CH-53E Super Stallion</description>
	<author>Josh Babcock</author>
	<status>early alpha</status>
	<aircraft-version>0.1</aircraft-version>

	<flight-model>yasim</flight-model>
	<aero>ch53e-yasim</aero>

	<model>
		<path>Aircraft/ch53e/Models/ch53e-model.xml</path>
		<ch53e>
			<debug-model>0</debug-model>
			<instrument-pos>
				<gearHandleGlow>
					<emission>
						<red>0</red>
						<green>0</green>
						<blue>0</blue>
					</emission>
					<ambient>
						<red>0.8</red>
						<green>0.8</green>
						<blue>0.8</blue>
					</ambient>
				</gearHandleGlow>
			</instrument-pos>
			<control-pos>
				<LandingGearEmergExt-pos-norm>0</LandingGearEmergExt-pos-norm>
				<LandingGearEmergExt-rot-norm>0</LandingGearEmergExt-rot-norm>
				<TacanMajFreqSel-rot-deg>0</TacanMajFreqSel-rot-deg>
			</control-pos>
			<control-input>
				<emergency-gear-release>0</emergency-gear-release>
			</control-input>
			<body-part-pos>
			</body-part-pos>
		</ch53e>
	</model>

	<weight>
		<name>sta-162-222</name>
		<weight-lb>0</weight-lb>
		<max-lb>2000</max-lb>
	</weight>

	<weight>
		<name>sta-222-282</name>
		<weight-lb>0</weight-lb>
		<max-lb>2000</max-lb>
	</weight>

	<weight>
		<name>sta-282-342</name>
		<weight-lb>0</weight-lb>
		<max-lb>2000</max-lb>
	</weight>

	<weight>
		<name>sta-342-402</name>
		<weight-lb>0</weight-lb>
		<max-lb>2000</max-lb>
	</weight>

	<weight>
		<name>sta-402-462</name>
		<weight-lb>0</weight-lb>
		<max-lb>2000</max-lb>
	</weight>

	<weight>
		<name>sta-462-522</name>
		<weight-lb>0</weight-lb>
		<max-lb>2000</max-lb>
	</weight>

	<weight>
		<name>cargo-hook</name>
		<weight-lb>0</weight-lb>
		<max-lb>36000</max-lb>
		<cable-cut type="bool">false</cable-cut>
	</weight>

	<weight>
		<name>rescue-hoist</name>
		<weight-lb>0</weight-lb>
		<max-lb>600</max-lb>
		<cable-cut type="bool">false</cable-cut>
	</weight>

	<virtual-cockpit>true</virtual-cockpit>
	<view n="0">
		<internal>true</internal>
		<config>
			<!-- FIXME -->
			<pitch-offset-deg>-10</pitch-offset-deg>
			<x-offset-m>0.65</x-offset-m>
			<!--x-offset-m>0</x-offset-m-->
			<y-offset-m>1.3</y-offset-m>
			<z-offset-m>4.4</z-offset-m>
			<!--z-offset-m>4.2</z-offset-m-->
		</config>
	</view>

	<view n="1">
		<config>
			<target-x-offset-m>1.2</target-x-offset-m>
			<target-z-offset-m>9.5</target-z-offset-m>
		</config>
	</view>

	<view n="2">
		<config>
			<target-x-offset-m>1.2</target-x-offset-m>
			<target-z-offset-m>9.5</target-z-offset-m>
		</config>
	</view>

	<view n="3">
		<config>
			<target-x-offset-m>1.2</target-x-offset-m>
			<target-z-offset-m>9.5</target-z-offset-m>
		</config>
	</view>

	<view n="4">
		<config>
			<target-x-offset-m>1.2</target-x-offset-m>
			<target-z-offset-m>9.5</target-z-offset-m>
		</config>
	</view>

	<view n="5">
		<config>
			<target-x-offset-m>1.2</target-x-offset-m>
			<target-z-offset-m>9.5</target-z-offset-m>
		</config>
	</view>

	<sound>
		<path>Aircraft/bell206/bell206-sound.xml</path>
	</sound>
</sim>

<instrumentation>
	<comm n="0">
		<power type="bool">1</power>
	</comm>
	<comm n="1">
		<power type="bool">1</power>
	</comm>
	<tacan>
		<mode/>
		<channel-select-mode>0</channel-select-mode>
	</tacan>
	<stick-position-indicator>
		<serviceable type="bool">true</serviceable>
	</stick-position-indicator>
</instrumentation>

<controls>
	<lighting>
		<nvg-mode>false</nvg-mode>
	</lighting>
</controls>

<nasal>
	<ch53e>
		<file>Aircraft/ch53e/ch53e.nas</file>
	</ch53e>
</nasal>

</PropertyList>
