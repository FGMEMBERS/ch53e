<?xml version="1.0"?>

<PropertyList>

<sim>
	<name>CH-53E</name>
	<description>Sikorsky CH-53E Super Stallion</description>
	<author>Josh Babcock</author>
	<status>early alpha</status>
	<aircraft-version>0.1</aircraft-version>

	<flight-model>yasim</flight-model>
	<aero>ch53e-yasim</aero>

	<model>
		<path>Aircraft/ch53e/Models/ch53e-model.xml</path>
		<ch53e>
			<debug-model type='int'>0</debug-model>
			<materials>
				<gearHandleGlow>
					<emission>
						<red type='double'>0</red>
						<green type='double'>0</green>
						<blue type='double'>0</blue>
					</emission>
					<ambient>
						<red type='double'>0.8</red>
						<green type='double'>0.8</green>
						<blue type='double'>0.8</blue>
					</ambient>
				</gearHandleGlow>
				<dome-light-color>
					<nvg>
						<red type='double'>0.5</red>
						<green type='double'>0.15</green>
						<blue type='double'>0.15</blue>
					</nvg>
					<unaided>
						<red type='double'>1.0</red>
						<green type='double'>0.3</green>
						<blue type='double'>0.3</blue>
					</unaided>
				</dome-light-color>
				<panel-light-color>
					<nvg>
						<red type='double'>0.5</red>
						<green type='double'>0.15</green>
						<blue type='double'>0.15</blue>
					</nvg>
					<unaided>
						<red type='double'>1.0</red>
						<green type='double'>0.3</green>
						<blue type='double'>0.3</blue>
					</unaided>
				</panel-light-color>
				<instrument-light-color>
					<nvg>
						<red type='double'>0.2</red>
						<green type='double'>0.7</green>
						<blue type='double'>0.0</blue>
					</nvg>
					<unaided>
						<red type='double'>1.0</red>
						<green type='double'>0.1</green>
						<blue type='double'>0.3</blue>
					</unaided>
				</instrument-light-color>
			</materials>
			<control-pos>
				<LandingGearEmergExt-pos-norm type='double'>0</LandingGearEmergExt-pos-norm>
				<LandingGearEmergExt-rot-norm type='double'>0</LandingGearEmergExt-rot-norm>
				<TacanMajFreqSel-rot-deg type='double'>0</TacanMajFreqSel-rot-deg>
			</control-pos>
			<control-input>
				<emergency-gear-release type='int'>0</emergency-gear-release>
				<stick-pos-test type='int'>0</stick-pos-test>
				<stick-pos-bright-norm type='double' userarchive='y'/>
				<caution-bright-norm type='double' userarchive='y'/>
				<probe-extend type='int' userarchive='y'>0</probe-extend>
			</control-input>
		</ch53e>
		<jrb-usn>
			<gyro-needle-source n='0' userarchive='y'/>
			<gyro-needle-source n='1' userarchive='y'/>
			<radar-altitude-decision-height type='int' userarchive='y'/>
			<gyro-bug-heading type='double' userarchive='y'/>
		</jrb-usn>
	</model>

	<weight>
		<name>sta-162-222</name>
		<weight-lb>0</weight-lb>
		<max-lb>2000</max-lb>
	</weight>

	<weight>
		<name>sta-222-282</name>
		<weight-lb>0</weight-lb>
		<max-lb>2000</max-lb>
	</weight>

	<weight>
		<name>sta-282-342</name>
		<weight-lb>0</weight-lb>
		<max-lb>2000</max-lb>
	</weight>

	<weight>
		<name>sta-342-402</name>
		<weight-lb>0</weight-lb>
		<max-lb>2000</max-lb>
	</weight>

	<weight>
		<name>sta-402-462</name>
		<weight-lb>0</weight-lb>
		<max-lb>2000</max-lb>
	</weight>

	<weight>
		<name>sta-462-522</name>
		<weight-lb>0</weight-lb>
		<max-lb>2000</max-lb>
	</weight>

	<weight>
		<name>cargo-hook</name>
		<weight-lb>0</weight-lb>
		<max-lb>36000</max-lb>
		<cable-cut type="bool">false</cable-cut>
	</weight>

	<weight>
		<name>rescue-hoist</name>
		<weight-lb>0</weight-lb>
		<max-lb>600</max-lb>
		<cable-cut type="bool">false</cable-cut>
	</weight>

	<virtual-cockpit>true</virtual-cockpit>
	<view n="0">
		<internal>true</internal>
		<config>
			<!-- FIXME -->
			<pitch-offset-deg>-10</pitch-offset-deg>
			<x-offset-m>0.65</x-offset-m>
			<!--x-offset-m>0</x-offset-m-->
			<y-offset-m>1.3</y-offset-m>
			<z-offset-m>4.4</z-offset-m>
			<!--z-offset-m>4.2</z-offset-m-->
		</config>
	</view>

	<view n="1">
		<config>
			<target-x-offset-m>1.2</target-x-offset-m>
			<target-z-offset-m>9.5</target-z-offset-m>
		</config>
	</view>

	<view n="2">
		<config>
			<target-x-offset-m>1.2</target-x-offset-m>
			<target-z-offset-m>9.5</target-z-offset-m>
		</config>
	</view>

	<view n="3">
		<config>
			<target-x-offset-m>1.2</target-x-offset-m>
			<target-z-offset-m>9.5</target-z-offset-m>
		</config>
	</view>

	<view n="4">
		<config>
			<target-x-offset-m>1.2</target-x-offset-m>
			<target-z-offset-m>9.5</target-z-offset-m>
		</config>
	</view>

	<view n="5">
		<config>
			<target-x-offset-m>1.2</target-x-offset-m>
			<target-z-offset-m>9.5</target-z-offset-m>
		</config>
	</view>

	<sound>
		<path>Aircraft/bell206/bell206-sound.xml</path>
	</sound>
</sim>

<instrumentation>
	<comm n="0">
		<power type="bool">1</power>
	</comm>
	<comm n="1">
		<power type="bool">1</power>
	</comm>
	<tacan>
		<mode/>
		<channel-select-mode>0</channel-select-mode>
	</tacan>
	<stick-position-indicator>
		<serviceable type="bool">true</serviceable>
	</stick-position-indicator>
	<hydraulic-quantity>
		<tank n="0">
			<vol-norm type="double">0</vol-norm>
		</tank>
		<tank n="1">
			<vol-norm type="double">0</vol-norm>
		</tank>
		<tank n="2">
			<vol-norm type="double">0</vol-norm>
		</tank>
		<tank n="3">
			<vol-norm type="double">0</vol-norm>
		</tank>
	</hydraulic-quantity>
</instrumentation>

<controls>
	<gear>
		<brake-parking>1</brake-parking>
	</gear>
	<lighting>
		<nvg-mode type='bool'>false</nvg-mode>
	</lighting>
	<rotor>
		<brake type='bool'>false</brake>
	</rotor>
</controls>

<systems>
	<!--electrical>
		<path>Aircraft/ch53e/ch53e-electrical.xml</path>
	</electrical-->
</systems>

<consumables>
	<hydraulic>
		<tank n="0">
			<volume-gal_us type="double">5</volume-gal_us>
			<capacity-gal_us type="double">5</capacity-gal_us>
		</tank>
		<tank n="1">
			<volume-gal_us type="double">5</volume-gal_us>
			<capacity-gal_us type="double">5</capacity-gal_us>
		</tank>
		<tank n="2">
			<volume-gal_us type="double">5</volume-gal_us>
			<capacity-gal_us type="double">5</capacity-gal_us>
		</tank>
		<tank n="3">
			<volume-gal_us type="double">5</volume-gal_us>
			<capacity-gal_us type="double">5</capacity-gal_us>
		</tank>
	</hydraulic>
</consumables>

<nasal>
	<ch53e>
		<file>Aircraft/ch53e/ch53e.nas</file>
	</ch53e>
	<caution-panel>
		<file>Aircraft/ch53e/ch53e-caution.nas</file>
	</caution-panel>
	<jrb-usn-adi>
		<file>Aircraft/ch53e/Instruments/jrb-usn.nas</file>
	</jrb-usn-adi>
	<interior-lights>
		<file>Aircraft/ch53e/interior-lights.nas</file>
	</interior-lights>
</nasal>

</PropertyList>
